---
import { Languages } from '../utils/types';

export interface Props {
	language: Languages;
}

const { language } = Astro.props as Props;

const url = Astro.url;
---

<footer class="p-4 bg-white rounded-lg shadow md:px-6 md:py-8 dark:bg-gray-900">
	<hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
	<div style="padding-top:10px;"></div>
	<div class="sm:flex sm:items-center sm:justify-between">
		<a href={url.pathname.toString().length > 4 ? '/' : '#'} class="flex items-center mb-4 sm:mb-0">
			<img
				src="https://raw.githubusercontent.com/PoliNetworkOrg/Logo/master/Logo.png"
				class="mr-3 h-8"
				alt="PoliNetwork Logo"
			/>
			<span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">PoliNetwork</span>
		</a>
	</div>
	<div style="padding-top:30px;"></div>
	<ul class="flex flex-wrap items-center mb-6 text-sm text-gray-500 sm:mb-0 dark:text-gray-400">
		<li>
			<a href="https://polinetwork.org" class="mr-4 hover:underline md:mr-6"
				>{
					language == Languages.IT ? (
						<span>
							PoliNetwork è una associazione APS nonprofit che mira a costruire un network coeso di studenti
							universitari
						</span>
					) : (
						<span>
							PoliNetwork is a non-profit APS association that aims to build a cohesive network of university students
						</span>
					)
				}</a
			>
		</li>
	</ul>
	<div style="padding-top:10px;"></div>
	<div>
		<ul class="flex flex-wrap items-center mb-6 text-sm text-gray-500 sm:mb-0 dark:text-gray-400">
			<li>
				<a
					href={language == Languages.IT
						? 'https://programma-affiliazione.amazon.it/'
						: 'https://affiliate-program.amazon.com/'}
					class="mr-4 hover:underline md:mr-6"
					>{
						language == Languages.IT ? (
							<span>
								In qualità di Affiliato Amazon, "PoliNetwork APS", a costo zero per gli acquirenti, riceve un guadagno
								dagli acquisti idonei
							</span>
						) : (
							<span>
								As an Amazon Affiliate, "PoliNetwork APS", at no cost to buyers, earns money from qualifying purchases
							</span>
						)
					}
				</a>
			</li>
		</ul>
	</div>
</footer>
